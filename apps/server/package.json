{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/src/index.js",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"dotenv": "^16.5.0",
		"zod": "^3.25.36",
		"@orpc/server": "^1.3.0",
		"@orpc/client": "^1.3.0",
		"hono": "^4.7.10",
		"drizzle-orm": "^0.44.0",
		"pg": "^8.16.0",
		"better-auth": "^1.2.8"
	},
	"devDependencies": {
		"tsc-alias": "^1.8.16",
		"typescript": "^5.8.3",
		"@types/bun": "^1.2.15",
		"drizzle-kit": "^0.31.1",
		"@types/pg": "^8.15.2"
	}
}