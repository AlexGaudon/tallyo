{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:full": "npm run build && cd ../web && npm run build && mkdir -p ../server/public && cp -r dist/* ../server/public/",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "bun run src/db/seed.ts"
	},
	"dependencies": {
		"@orpc/client": "^1.7.11",
		"@orpc/server": "^1.7.11",
		"better-auth": "^1.3.4",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"hono": "^4.9.0",
		"pg": "^8.16.3",
		"winston": "^3.17.0",
		"zod": "^4.0.15"
	},
	"devDependencies": {
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.2",
		"@types/bun": "^1.2.19",
		"drizzle-kit": "^0.31.4",
		"@types/pg": "^8.15.5"
	}
}
